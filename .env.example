# I3lani Bot Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ======================
# REQUIRED VARIABLES
# ======================

# Telegram Bot Token (Get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin User IDs (Comma-separated list of Telegram user IDs)
# Get your user ID from @userinfobot
ADMIN_IDS=123456789,987654321

# ======================
# PAYMENT CONFIGURATION
# ======================

# TON Wallet Address for receiving payments
TON_WALLET_ADDRESS=UQDZpONCwPqBcWezyEGK9ikCHMknoyTrBL-L2hATQbClmulB

# TON API Key (Optional - for advanced TON features)
# TON_API_KEY=your_ton_api_key_here

# ======================
# DATABASE CONFIGURATION
# ======================

# Database URL (Auto-set by deployment platforms)
# For local development, SQLite is used by default
# DATABASE_URL=sqlite:///bot.db

# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database

# ======================
# DEPLOYMENT CONFIGURATION
# ======================

# Flask server port (Auto-set by deployment platforms)
# PORT=5001

# Disable Stars Flask server (Prevents duplicate Flask instances)
DISABLE_STARS_FLASK=1

# ======================
# OPTIONAL FEATURES
# ======================

# Webhook URL for Telegram Stars payments (Optional)
# WEBHOOK_URL=https://your-domain.com/webhook

# Bot environment (development/staging/production)
# BOT_ENV=development

# Debug mode (true/false)
# DEBUG=false

# ======================
# SECURITY SETTINGS
# ======================

# Rate limiting settings (requests per minute)
# RATE_LIMIT=60

# Session timeout (minutes)
# SESSION_TIMEOUT=30

# ======================
# EXTERNAL SERVICES
# ======================

# Analytics tracking (Optional)
# ANALYTICS_KEY=your_analytics_key_here

# External API endpoints (Optional)
# EXTERNAL_API_URL=https://api.example.com

# ======================
# DEVELOPMENT SETTINGS
# ======================

# Log level (DEBUG/INFO/WARNING/ERROR)
# LOG_LEVEL=INFO

# Test mode (true/false)
# TEST_MODE=false

# ======================
# PLATFORM-SPECIFIC SETTINGS
# ======================

# Railway deployment settings
# RAILWAY_ENVIRONMENT=production

# Render deployment settings
# RENDER_ENVIRONMENT=production

# Google Cloud Run settings
# GOOGLE_CLOUD_PROJECT=your-project-id