{
  "services": [
    {
      "type": "web",
      "name": "i3lani-bot",
      "runtime": "python",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "python deployment_server.py",
      "plan": "free",
      "envVars": {
        "DISABLE_STARS_FLASK": "1",
        "PYTHON_VERSION": "3.11.0"
      }
    }
  ],
  "databases": [
    {
      "name": "i3lani-db", 
      "databaseName": "i3lani",
      "user": "i3lani_user",
      "plan": "free"
    }
  ]
}