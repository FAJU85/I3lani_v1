{
  "services": [
    {
      "type": "web",
      "name": "i3lani-bot",
      "env": "python",
      "buildCommand": "pip install -r requirements_minimal.txt",
      "startCommand": "python deployment_server.py",
      "plan": "free",
      "healthCheckPath": "/health",
      "envVars": [
        {
          "key": "BOT_TOKEN",
          "generateValue": false
        },
        {
          "key": "ADMIN_IDS", 
          "generateValue": false
        },
        {
          "key": "TON_WALLET_ADDRESS",
          "value": "UQDZpONCwPqBcWezyEGK9ikCHMknoyTrBL-L2hATQbClmulB"
        },
        {
          "key": "DISABLE_STARS_FLASK",
          "value": "1"
        }
      ]
    },
    {
      "type": "worker",
      "name": "i3lani-worker",
      "env": "python",
      "buildCommand": "pip install -r requirements_minimal.txt",
      "startCommand": "python worker.py",
      "plan": "free",
      "envVars": [
        {
          "key": "BOT_TOKEN",
          "generateValue": false
        },
        {
          "key": "ADMIN_IDS",
          "generateValue": false
        }
      ]
    }
  ],
  "databases": [
    {
      "name": "i3lani-db",
      "plan": "free"
    }
  ]
}